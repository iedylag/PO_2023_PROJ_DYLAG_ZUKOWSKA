<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            minHeight="750.0" minWidth="600.0"
            fx:controller="agh.ics.oop.presenter.SimulationPresenter">
    <center>
        <VBox alignment="CENTER" spacing="20">
            <Label text="Map dimensions" textAlignment="CENTER" style="-fx-font-size: 16; -fx-font-weight: bold;"/>
            <GridPane fx:id="mapGrid" gridLinesVisible="true"/>

            <HBox spacing="25" alignment="CENTER">
                <VBox spacing="18">
                    <Label text="Width:"/>
                    <Label text="Height:"/>
                </VBox>
                <VBox spacing="5">

                    <Spinner fx:id="widthSpinner" editable="true">
                        <valueFactory>
                            <SpinnerValueFactory.IntegerSpinnerValueFactory
                                    fx:id="widthSpinnerValueFactory"
                                    min="2"
                                    max="15"
                                    initialValue="10"/>
                        </valueFactory>
                    </Spinner>


                    <Spinner fx:id="heightSpinner" editable="true">
                        <valueFactory>
                            <SpinnerValueFactory.IntegerSpinnerValueFactory
                                    fx:id="heightSpinnerValueFactory"
                                    min="2"
                                    max="15"
                                    initialValue="10"/>
                        </valueFactory>
                    </Spinner>
                </VBox>
            </HBox>
            <Label text="Grass" textAlignment="CENTER" style="-fx-font-size: 16; -fx-font-weight: bold;"/>
            <HBox spacing="25" alignment="CENTER">
                <VBox spacing="15">
                    <Label text="Initial Grass:"/>
                    <Label text="Energy Grass:"/>
                    <Label text="Daily Growth:"/>
                    <Label text="Grass Variant:"/>
                </VBox>
                <VBox spacing="5">

                    <Spinner fx:id="initialGrassSpinner" editable="true">
                        <valueFactory>
                            <SpinnerValueFactory.IntegerSpinnerValueFactory
                                    fx:id="initialGrassSpinnerValueFactory"
                                    min="1"
                                    max="100"
                                    initialValue="30"/>
                        </valueFactory>
                    </Spinner>


                    <Spinner fx:id="energyGrassSpinner" editable="true">
                        <valueFactory>
                            <SpinnerValueFactory.IntegerSpinnerValueFactory
                                    fx:id="energyGrassSpinnerValueFactory"
                                    min="1"
                                    max="10"
                                    initialValue="3"/>
                        </valueFactory>
                    </Spinner>


                    <Spinner fx:id="dailyGrowthSpinner" editable="true">
                        <valueFactory>
                            <SpinnerValueFactory.IntegerSpinnerValueFactory
                                    fx:id="dailyGrowthSpinnerValueFactory"
                                    min="1"
                                    max="10"
                                    initialValue="4"/>
                        </valueFactory>
                    </Spinner>


                    <Spinner fx:id="grassVariantSpinner" editable="true">
                        <valueFactory>
                            <SpinnerValueFactory.IntegerSpinnerValueFactory
                                    fx:id="grassVariantSpinnerValueFactory"
                                    min="1"
                                    max="2"
                                    initialValue="1"/>
                        </valueFactory>
                    </Spinner>
                </VBox>
            </HBox>
            <Label text="Animals" textAlignment="CENTER" style="-fx-font-size: 16; -fx-font-weight: bold;"/>
            <HBox spacing="25" alignment="CENTER">
                <VBox spacing="15">
                    <Label text="Initial Animals:"/>
                    <Label text="Starting Energy Animal:"/>
                    <Label text="Reproduction Energy:"/>
                </VBox>
                <VBox spacing="5">

                    <Spinner fx:id="initialAnimalsSpinner" editable="true">
                        <valueFactory>
                            <SpinnerValueFactory.IntegerSpinnerValueFactory
                                    fx:id="initialAnimalsSpinnerValueFactory"
                                    min="1"
                                    max="100"
                                    initialValue="10"/>
                        </valueFactory>
                    </Spinner>

                    <Spinner fx:id="startingEnergyAnimalSpinner" editable="true">
                        <valueFactory>
                            <SpinnerValueFactory.IntegerSpinnerValueFactory
                                    fx:id="startingEnergyAnimalSpinnerValueFactory"
                                    min="1"
                                    max="100"
                                    initialValue="20"/>
                        </valueFactory>
                    </Spinner>


                    <Spinner fx:id="reproductionEnergySpinner" editable="true">
                        <valueFactory>
                            <SpinnerValueFactory.IntegerSpinnerValueFactory
                                    fx:id="reproductionEnergySpinnerValueFactory"
                                    min="1"
                                    max="50"
                                    initialValue="15"/>
                        </valueFactory>
                    </Spinner>


                    <Spinner fx:id="offspringEnergySpinner" editable="true">
                        <valueFactory>
                            <SpinnerValueFactory.IntegerSpinnerValueFactory
                                    fx:id="offspringEnergySpinnerValueFactory"
                                    min="1"
                                    max="80"
                                    initialValue="30"/>
                        </valueFactory>
                    </Spinner>
                </VBox>
            </HBox>
            <Label text="Genome" textAlignment="CENTER" style="-fx-font-size: 16; -fx-font-weight: bold;"/>
            <HBox spacing="25" alignment="CENTER">
                <VBox spacing="15">
                    <Label text="Genome Length:"/>
                    <Label text="Mutation Variant:"/>
                    <Label text="Min Mutations:"/>
                    <Label text="Max Mutations:"/>
                </VBox>
                <VBox spacing="5">

                    <Spinner fx:id="genomeLengthSpinner" editable="true">
                        <valueFactory>
                            <SpinnerValueFactory.IntegerSpinnerValueFactory
                                    fx:id="genomeLengthSpinnerValueFactory"
                                    min="1"
                                    max="50"
                                    initialValue="20"/>
                        </valueFactory>
                    </Spinner>


                    <Spinner fx:id="mutationVariantSpinner" editable="true">
                        <valueFactory>
                            <SpinnerValueFactory.IntegerSpinnerValueFactory
                                    fx:id="mutationVariantSpinnerValueFactory"
                                    min="1"
                                    max="2"
                                    initialValue="1"/>
                        </valueFactory>
                    </Spinner>

                    <Spinner fx:id="minMutationsSpinner" editable="true">
                        <valueFactory>
                            <SpinnerValueFactory.IntegerSpinnerValueFactory
                                    fx:id="minMutationsSpinnerValueFactory"
                                    min="0"
                                    max="20"
                                    initialValue="3"/>
                        </valueFactory>
                    </Spinner>


                    <Spinner fx:id="maxMutationsSpinner" editable="true">
                        <valueFactory>
                            <SpinnerValueFactory.IntegerSpinnerValueFactory
                                    fx:id="maxMutationsSpinnerValueFactory"
                                    min="0"
                                    max="20"
                                    initialValue="12"/>
                        </valueFactory>
                    </Spinner>
                </VBox>
            </HBox>
            <Button fx:id="startButton" text="Start" onAction='#onSimulationStartClicked'/>
        </VBox>
    </center>
</BorderPane>
