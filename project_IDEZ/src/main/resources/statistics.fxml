<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="agh.ics.oop.presenter.StatisticsPresenter">
    <center>
        <Label style="-fx-font-size: 16; -fx-font-weight: bold;" text="Statystyki" textAlignment="CENTER"/>
        <GridPane fx:id="mapGrid" gridLinesVisible="true"/>

        <HBox alignment="TOP_LEFT" spacing="25">
            <VBox spacing="18">
                <Label fx:id="animalsCountLabel"/>
                <Label fx:id="grassCountLabel"/>
                <Label fx:id="emptyFields"/>
                <Label fx:id="mostPopularGenome"/>
                <Label fx:id="averageEnergy"/>
                <Label fx:id="averageLifeTime"/>
                <Label fx:id="averageChildrenCount"/>
            </VBox>
        </HBox>
    </center>
    <left>
        <PieChart fx:id="animalGrassRatioPlot" prefHeight="320.0" prefWidth="207.0" title="Animal/Grass ratio"
                  BorderPane.alignment="CENTER"/>
    </left>
</BorderPane>
